<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Registration customers service -->
        <service id="app.customer.services.register"
                 class="Desperado\ServiceBus\Demo\Customer\Services\RegisterCustomerService"
                 public="false">
            <tag name="service_bus.service"/>
        </service>

        <!-- Verification customers service -->
        <service id="app.customer.services.verification"
                 class="Desperado\ServiceBus\Demo\Customer\Services\CustomerVerificationService"
                 public="false">
            <tag name="service_bus.service"/>
        </service>

        <!-- Manage customers service -->
        <service id="app.customer.services.manage"
                 class="Desperado\ServiceBus\Demo\Customer\Services\ManageCustomerService"
                 public="false">
            <tag name="service_bus.service"/>
        </service>

        <!-- Email service -->
        <service id="app.email_notifications.services.notifications"
                 class="Desperado\ServiceBus\Demo\EmailNotifications\Services\EmailNotificationsService"
                 public="false">
            <tag name="service_bus.service"/>
        </service>
    </services>
</container>
