<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Commit aggregates after message execution -->
        <service id="event_listeners.commit_aggregates_listener"
                 class="Desperado\ServiceBus\Demo\Application\CommitAggregatesListener"
                 public="false">
            <argument type="service" id="event_sourcing.service"/>

            <tag name="service_bus.event_listener"
                 event="service_bus.kernel_events.after_execution"
                 method="onComplete"/>

        </service>

    </services>
</container>
