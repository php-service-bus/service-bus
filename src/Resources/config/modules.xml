<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Error handler module -->
        <service
                id="service_bus.modules.error_handler"
                class="Desperado\ServiceBus\Modules\MessageErrorHandlerModule"
                public="false">
            <tag name="service_bus.module"/>
        </service>

        <!-- Message validation module -->
        <service
                id="service_bus.modules.message_validation"
                class="Desperado\ServiceBus\Modules\MessageValidationModule"
                public="false">
            <tag name="service_bus.module"/>
        </service>

    </services>

</container>
